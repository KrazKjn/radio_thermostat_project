# The secret key used for signing JWT tokens.
SECRET_KEY=your_secret_key

# The port the proxy server will run on.
PORT=3000

# The authkey for the thermostat's cloud communication.
# This is a hardcoded value in the thermostat's firmware.
THERMOSTAT_AUTH_KEY=beaa4c96

# A test thermostat UUID for development purposes.
TEST_THERMOSTAT_UUID=5cdad4517dda

# Set to "true" to enable debug logging.
DEBUG=false
# LOG_FILE_PATH=
LOG_MODE='screen' # 'screen', 'file', or 'both'
LOG_DEBUG_LEVEL=4

# The URL to forward thermostat cloud data to (optional).
# FWD_URL=http://some_other_server/

# Weather API key (if using weather features)
WEATHER_API_KEY=your_api_key
WEATHER_LATITUDE=38.8977
WEATHER_LONGITUDE=77.0365

# Enable or disable features
ENABLE_SWING=false
ENABLE_BEEP=false

# Display settings
HVAC_COST_DECIMALS=2
HVAC_USAGE_DECIMALS=2
FAN_COST_DECIMALS=3
FAN_USAGE_DECIMALS=3
TEMPERATURE_DECIMALS=1

# MQTT Broker Settings
MQTT_BROKER_URL=mqtt://localhost:1883
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_BROKER_PORT=1883
MQTT_CLIENT_ID=thermostat-server
MQTT_TOPIC_PREFIX=thermostat
MQTT_KEEPALIVE=60
MQTT_RECONNECT_PERIOD=1000
MQTT_USE_SSL=false
MQTT_CYCLE_MINUTES=30
